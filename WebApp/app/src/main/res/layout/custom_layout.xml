<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/relativebg"
    android:id="@+id/constraintLayout">

    <ImageView
        android:layout_width="352dp"
        android:layout_height="479dp"
        app:srcCompat="@drawable/bg"
        android:id="@+id/carosalbg"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.52" />

    <TextView
        android:layout_width="96dp"
        android:layout_height="74dp"
        android:id="@+id/textView2"
        android:background="@drawable/backroundview"
        app:layout_constraintLeft_toLeftOf="@+id/carosalbg"
        app:layout_constraintRight_toRightOf="@+id/carosalbg"
        app:layout_constraintBottom_toBottomOf="@+id/carosalbg"
        app:layout_constraintHorizontal_bias="1.0" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/videioicon"
        android:id="@+id/imageView3"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintRight_toRightOf="@+id/carosalbg"
        app:layout_constraintBottom_toBottomOf="@+id/carosalbg"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:text="125"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        app:layout_constraintRight_toRightOf="@+id/imageView3"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        android:layout_marginBottom="8dp" />


</android.support.constraint.ConstraintLayout>