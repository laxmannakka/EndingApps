<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.bridgelabz.fundohr.MainActivity">
<android.support.v7.widget.Toolbar
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:title="@string/app_name"
    app:subtitleTextColor="#000000"
    android:layout_height="wrap_content">

</android.support.v7.widget.Toolbar>
  <TextView
      android:layout_marginTop="120dp"
      android:gravity="center"
      android:layout_marginBottom="5dp"
      android:textColor="#000000"
      android:textSize="30dp"
      android:text="Attendance Hr"
      android:id="@+id/edittext"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_below="@+id/edittext"
        android:id="@+id/relative1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:layout_marginTop="15dp"
        android:id="@+id/gmail"
        android:hint="Enter email"
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:background="@drawable/rextangleshapee"
        android:layout_height="35dp" />
    <Button
        android:id="@+id/signin"
        android:text="@string/buttontext"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/gmail"
        android:background="@drawable/buttonbackround"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_below="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:layout_alignParentLeft="true"
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/checkbox"
            android:id="@+id/rememerme"
            android:text="@string/remember"
            android:textColor="#070d1d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/checkbox"/>
        <TextView
            android:id="@+id/textview"
            android:text="need help ?"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="#2032a4"
            android:layout_alignBaseline="@+id/checkbox"/>
    </RelativeLayout>


</RelativeLayout>
