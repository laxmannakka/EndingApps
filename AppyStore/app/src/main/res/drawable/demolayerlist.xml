<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:opacity="opaque">

    <item

        android:id="@+id/layer1"
        android:width="40dp"
        android:height="40dp"
        android:bottom="10dp"
        android:gravity="center"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp">
        <shape android:shape="oval"
            android:useLevel="true">
            <stroke
                android:width="4dp"
                android:color="@color/white" />
            <solid android:color="@android:color/white" />

            <gradient
                android:angle="180"
                android:endColor="#FFFFE0"
                android:startColor="#ffffff"
                android:type="linear" />

        </shape>
    </item>

    <item
        android:id="@+id/layer3"
        android:width="38dp"
        android:height="38dp"
        android:gravity="center"
        android:start="0dp"
        android:top="1.5dp"
        android:bottom="2.5dp">
        <shape android:shape="oval">
            <gradient
                android:angle="180"/>
            <solid android:color="#606060" />
        </shape>
    </item>

    <item
        android:id="@+id/layerimage"
        android:width="26dp"
        android:height="30dp"
        android:gravity="center">
        <bitmap android:src="@drawable/ic_search_white_24dp" />
    </item>


</layer-list>