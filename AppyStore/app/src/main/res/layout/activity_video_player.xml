<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_video_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.bridgelabz.appystore.view.VideoPlayerFragment">

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/backimage"
            android:layout_marginRight="20dp"
            android:src="@drawable/backbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="" />
        <VideoView
            android:id="@+id/videoview"
            android:layout_width="400dp"
            android:layout_centerVertical="true"
            android:layout_height="match_parent"
            android:layout_marginStart="75dp"
            android:layout_alignParentTop="true" />

        <ImageView
            android:layout_toLeftOf="@+id/videoview"
            android:src="@drawable/download"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@+id/videoview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/videoview" />


    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:background="#808080"
        android:layout_below="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="220dp">
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:id="@+id/recyclerviewofvideos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>


</RelativeLayout>
